<script>
  // Library letak disini
  function ubahSource(gambarSelector, previewSelector) {
    const gambarElement = document.querySelector(gambarSelector);
    const previewElement = document.querySelector(previewSelector);

    gambarElement.addEventListener('change', function (e) {
      const file = new FileReader();
      file.readAsDataURL(this.files[0]); // kembalikan sebagai url blob
      file.onload = function (e) {
        previewElement.src = e.target.result; // url gambar sementara
      }
    })

  }

</script>